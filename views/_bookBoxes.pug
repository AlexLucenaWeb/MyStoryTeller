mixin bookBoxes(book)
    .bookBox  
        a.bookBox__container(href=`books/${book.slug}`) 
            img.bookBox__cover(src=`/img/books/${book.imageCover}` alt=`${book.imageCover}`)
        a.bookBox__container(href=`books/${book.slug}`)  
            h3.bookbox__name= book.name
        .bookBox__container
            .bookBox__age
                span= `Age: ${book.age}`
        .bookBox__container
            .bookBox__rating
                span= `Rating: ${book.ratingsAverage}`
        .bookbox_container
            p.bookbox_synopsis= `${book.description}`
        .bookBox__container
            a.form__btn(href=`books/${book.slug}`) 
                span= 'See book'