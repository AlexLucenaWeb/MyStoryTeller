block content
    main.main
        .section.bookOverview-container
            .bookOverview__name.container
                .row
                    h1.col-12  
                        span= book.name
            .bookOverview__info.container  
                .row
                    .bookOverview__image.col-6
                        img.bookOverview__cover(src=`/img/books/${book.imageCover}` alt=`${book.imageCover}`)
                    .bookOverview__data.col-6
                        p.bookOverview__description
                            span= book.description
                        p.bookOverview__rating
                            span= book.ratingsAverage
                        p.bookOverview__age
                            span= book.age
        .section.review-container.container
            .review
                each review in book.reviews
                    //- +reviewBoxes(review)
                    .reviews__reviewBox
                        .review__author
                            h6.review__user= review.user.name
                        .review__text
                            P
                                span= review.review
                        .review__rating
                            p
                                span= review.rating

