doctype html
html
    head
        meta(charset='UTF-8')
        title My Story Teller | #{title}
        link(rel='stylesheet' href='/css/style.css')
        link(rel="icon" type="image/png" href="/img/favicon.png")
        link(href='https://fonts.googleapis.com/css2?family=Dosis:wght@200;300;400;500;600;700;800&display=swap' rel='stylesheet')
        link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous")
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')

    body.noScroll
        main
            section.book-read
                .book-read__bg
                #book__menu.book__menu
                    .book__menu__btns
                        a.book__menu__btn(href='/main') Go back
                        a.book__menu__btn(href=`/books/${book.slug}/read`) Start again
                        a.noBookMenu.book__menu__btn(href='#pageFive') Go end
                        a#showTurial.book__menu__btn(href='#pageOne') Tutorial
                #tutorial.page.tutorial
                    #tutorial__text.tutorial__instruction
                        p.tutorial__text Click one time to see the text
                        img.tutorial__click(src="/img/clic.png")
                    #tutorial__navigation
                        .tutorial__left
                            p.tutorial__text 
                                | Click on the LEFT side 
                                br
                                | of the screem to go to 
                                br
                                | the PREVIUS page
                        .tutorial__right
                            p.tutorial__text 
                                | Click on the RIGHT side 
                                br
                                | of the screem to go to 
                                br
                                | the NEXT page
                    #skip.tutorial__skip 
                        p Skip tutorial
                // PAGE ONE
                #pageOne.page.pageOne-container
                    img.page__illustration(src=`/img/books/${book.images[0]}` alt=`${book.images[0]}`)
                    .page__text
                        img#textOne.text(src=`/img/books/${book.text[0]}` alt=`${book.text[0]}`)
                    a#nextOne.page__next.col-6(href='#pageTwo')
                
                // PAGE TWO
                #pageTwo.page.pageTwo-container.container
                    img.page__illustration(src=`/img/books/${book.images[1]}` alt=`${book.images[1]}`)
                    .page__text
                        img#textTwo.text(src=`/img/books/${book.text[1]}` alt=`${book.text[1]}`)
                a#prevTwo.page__prev.col-6(href='#pageOne')
                a#nextTwo.page__next.col-6(href='#pageThree')

                // PAGE THREE
                #pageThree.page.pageThree-container.container
                    img.page__illustration(src=`/img/books/${book.images[2]}` alt=`${book.images[2]}`)
                    .page__text
                        img#textThree.text(src=`/img/books/${book.text[2]}` alt=`${book.text[2]}`)
                a#prevThree.page__prev.col-6(href='#pageTwo')
                a#nextThree.page__next.col-6(href='#pageFour')

                // PAGE FOUR
                #pageFour.page.pageFour-container.container
                    img.page__illustration(src=`/img/books/${book.images[3]}` alt=`${book.images[3]}`)
                    .page__text
                        img#textFour.text(src=`/img/books/${book.text[3]}` alt=`${book.text[3]}`)
                a#prevFour.page__prev.col-6(href='#pageThree')
                a#nextFour.page__next.col-6.noBookMenu(href='#pageFive')

                // PAGE FIVE
                #pageFive.pageFive-container.container
                    //- a#prevFive.page__prev.col-6(href='#pageFour')
                    p#bookId.displayNone= book.id
                    .row
                        .pageFive__title.col-12
                            h2.end-title
                                | Snip, snap, snout,
                                br
                                | #{book.name}
                                br
                                | told out.
                    .row
                        .pageFive__box.col-4
                            a.book__btn.pageFive__btn(href=`/main`) Go back
                            a.book__btn.pageFive__btn(href=`/books/${book.slug}/read`) Read the book again
                            a.book__btn.pageFive__btn(href='/myReviews') See my reviews
                        .pageFive__box.col-8
                            .review-form-container
                                h3.review__title Writte a review
                                form#review_form.form
                                    .container
                                        .row
                                            .form__element.col-7
                                                textarea#review.form__review(rows='8' cols='70' placeholder="Please give us your opinion!." name='review' form='#review_form')
                                            .form__element.col-5
                                                h4 Rate the book:
                                                .form__element.form__rating
                                                    .form__radio
                                                        label.form__label(for='ratingOne') 1
                                                        input#ratingOne(type='radio' name='rating' value='1')
                                                    .form__radio
                                                        label.form__label(for='ratingTwo') 2
                                                        input#ratingTwo(type='radio' name='rating' value='2')
                                                    .form__radio
                                                        label.form__label(for='ratingThree') 3
                                                        input#ratingThree(type='radio' name='rating' value='3')
                                                    .form__radio
                                                        label.form__label(for='ratingfour') 4
                                                        input#ratingFour(type='radio' name='rating' value='4')
                                                    .form__radio
                                                        label.form__label(for='ratingFive') 5
                                                        input#ratingFive(type='radio' name='rating' value='5')
                                                button.form__btn Send the review!

            script(src='/js/bundle.js')